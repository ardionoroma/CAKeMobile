<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ikon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/adhi" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/ikon"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga saat ini"
                android:layout_gravity="left"
                android:textColor="#152935"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"/>
            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 3.750,00"
                android:layout_gravity="left"
                android:textSize="34sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#272D33"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Undervalue"
                android:layout_gravity="left"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:background="#50E3C2"
                android:textColor="#FFFFFF"
                android:padding="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nilai intrinsik"
                android:layout_gravity="left"
                android:textColor="#5A6872"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:paddingTop="5dp"/>
            <TextView
                android:id="@+id/intrinsik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 4.440,00"
                android:layout_gravity="left"
                android:textColor="#8897A2"
                android:textStyle="italic"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>